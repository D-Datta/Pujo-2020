<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/slider_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="10dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:sliderAnimationDuration="500"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="500"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/light_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_latest_post"
                android:fontFamily="@font/oxygen_bold"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="@string/trending_posts"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reels_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/light_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:fontFamily="@font/oxygen_regular"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:text="@string/short_videos"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reelsRecycler"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:clipToPadding="false"
                android:paddingBottom="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/view_all_reels"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/oxygen_regular"
            android:layout_marginTop="178dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/see_all"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/normal_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_alignParentTop="true"
            android:background="@color/light_background"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/post_bg"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:id="@+id/item_home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen_ex_bold"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/mins_ago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/custom_ripple_white"
                        android:src="@drawable/ic_more_horiz_black_24dp"
                        android:visibility="visible"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:fontFamily="@font/oxygen_bold"
                    android:paddingHorizontal="17dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:text="@string/post_content"
                    android:textColor="@color/black"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:textColorLink="@color/link"
                    android:textSize="15dp" />

                <com.example.pujo360.LinkPreview.ApplexLinkPreview
                    android:id="@+id/LinkPreView"
                    android:layout_width="match_parent"
                    android:minHeight="270dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

<!--                <HorizontalScrollView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_marginTop="5dp"
                        android:maxHeight="450dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_background_grey" />

<!--                </HorizontalScrollView>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/custom_ripple_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_drum" />

                        <ImageView
                            android:id="@+id/comment"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/custom_ripple_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_conch_shell" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/custom_ripple_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_blossom"
                            app:tint="#F3B3B3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/like_image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="7dp"
                            android:src="@drawable/ic_baseline_favorite_24"
                            app:tint="@color/black_transparent" />

                        <TextView
                            android:id="@+id/no_of_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="8dp"
                            android:fontFamily="@font/oxygen_ex_bold"
                            android:text="@string/_2_4k"
                            android:textColor="@color/black_transparent"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/comment_image"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end|center_vertical"
                            android:padding="8dp"
                            android:src="@drawable/ic_comment" />

                        <TextView
                            android:id="@+id/no_of_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="6dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/oxygen_ex_bold"
                            android:text="@string/_154"
                            android:textColor="@color/black_transparent"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_background"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="8dp"/>

            <LinearLayout
                android:id="@+id/comment_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:fontFamily="@font/oxygen_bold"
                            android:autoLink="all"
                            android:textColorLink="@color/toolbarStart"
                            android:text="@string/comment_hint"
                            android:textColor="#212121"
                            android:paddingHorizontal="8dp"/>

                        <com.example.pujo360.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment1"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:fontFamily="@font/oxygen_bold"
                            android:autoLink="all"
                            android:textColorLink="@color/toolbarStart"
                            android:text="@string/comment_hint"
                            android:textColor="#212121"
                            android:paddingHorizontal="8dp"/>

                        <com.example.pujo360.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment2"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/write_comment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="@string/write_a_comment"
                    android:paddingHorizontal="13dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/background_rectangle"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
