<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_reels"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/com_card"
            android:layout_width="220dp"
            android:layout_height="360dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="360dp">

                <ImageView
                    android:id="@+id/item_reels_image"
                    android:layout_width="220dp"
                    android:layout_height="360dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"/>

                <VideoView
                    android:id="@+id/item_reels_video"
                    android:layout_width="220dp"
                    android:layout_height="360dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/video_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:text="@string/_0_18"
                        android:textColor="@color/white"
                        android:textSize="13dp"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/reels_more"
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    app:tint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="20dp">

                        <ImageView
                            android:id="@+id/pujo_com_dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/pujo_com_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/oxygen_ex_bold"
                        android:gravity="center_vertical"
                        android:text="@string/pujo_committees"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:layout_marginEnd="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>