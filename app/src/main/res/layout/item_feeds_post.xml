<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header_committee">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_centerVertical="true"
                android:text="@string/pujo_committees"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/community_view_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginVertical="5dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:text="View all "
                android:background="@drawable/custom_ripple_white"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/purple"
                android:textSize="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communityRecycler"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:clipToPadding="false"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#E2E2E2"/>

        <LinearLayout
            android:id="@+id/type_something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/Pdp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account_circle_black_24dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="@string/type_something_n"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/layerlistbg"/>

            </LinearLayout>

            <View
                android:id="@+id/view_type_smth"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#E2E2E2"/>
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical"-->
<!--            android:background="#e2e2e2"-->
<!--            android:paddingBottom="7dp">-->

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingVertical="7dp"-->
<!--                android:gravity="center_vertical"-->
<!--                android:background="@drawable/shape_latest_post"-->
<!--                android:paddingHorizontal="20dp"-->
<!--                android:text="Trending Posts"-->
<!--                android:textSize="18sp" />-->

<!--        </LinearLayout>-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

<!--        <com.smarteist.autoimageslider.SliderView-->
<!--            android:id="@+id/imageSlider"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            app:sliderAnimationDuration="1000"-->
<!--            app:sliderAutoCycleDirection="back_and_forth"-->
<!--            app:sliderAutoCycleEnabled="true"-->
<!--            app:sliderCircularHandlerEnabled="true"-->
<!--            app:sliderIndicatorAnimationDuration="600"-->
<!--            app:sliderIndicatorGravity="center_horizontal|bottom"-->
<!--            app:sliderIndicatorMargin="15dp"-->
<!--            app:sliderIndicatorOrientation="horizontal"-->
<!--            app:sliderIndicatorPadding="3dp"-->
<!--            app:sliderIndicatorRadius="2dp"-->
<!--            app:sliderIndicatorSelectedColor="#5A5A5A"-->
<!--            app:sliderIndicatorUnselectedColor="#FFF"-->
<!--            app:sliderScrollTimeInSec="1"-->
<!--            app:sliderStartAutoCycle="true" />-->

        <ImageView
            android:id="@+id/no_recent_post"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="#e2e2e2"
            android:paddingHorizontal="20dp"
            android:paddingVertical="45dp"
            android:src="@drawable/ic_no_posts"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_post">

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentTop="true"
                android:background="#E2E2E2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:background="#E2E2E2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/post_bg"
                android:layout_marginBottom="8dp"
                android:elevation="@dimen/cardview_default_radius"
                android:id="@+id/item_home">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/comName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen_regular"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp"
                            android:text="Name"
                            android:maxLines="1"
                            android:background="@drawable/custom_ripple_white"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:ellipsize="end"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="2dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/mins_ago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="10 mins ago"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#fff"
                        android:background="@drawable/hobby_background_transparent"
                        android:src="@drawable/ic_more_horiz_black_24dp"
                        android:visibility="visible"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagsList66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false"
                    android:paddingTop="5dp"/>

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:paddingHorizontal="17dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:text="post_content"
                    android:textColor="@color/black"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:textColorLink="@color/toolbarStart"
                    android:textSize="15sp" />

                <com.example.pujo360.LinkPreview.ApplexLinkPreview
                    android:id="@+id/LinkPreView"
                    android:layout_width="match_parent"
                    android:minHeight="270dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:sliderAnimationDuration="500"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    android:layout_marginTop="5dp"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    android:visibility="gone"
                    app:sliderStartAutoCycle="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/flame"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_btmnav_notifications"
                        android:padding="1dp"
                        android:layout_marginStart="4dp"/>
                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_comment"
                        android:padding="5dp"
                        android:layout_marginStart="4dp"/>
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_share"
                        android:padding="5dp"
                        android:background="@drawable/custom_ripple_white"
                        android:visibility="gone"
                        android:layout_marginStart="4dp"/>
                    <TextView
                        android:id="@+id/flamed_by"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Flamed by 100 others"
                        android:paddingStart="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/write_comment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:hint="Write a comment..."
                        android:background="@drawable/background_rectangle"
                        android:paddingHorizontal="10dp"
                        android:layout_marginVertical="3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical" />
                    <!--            <TextView-->
                    <!--                android:id="@+id/threads"-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="match_parent"-->
                    <!--                android:text="3 threads  |"-->
                    <!--                android:paddingStart="10dp"-->
                    <!--                android:gravity="center_vertical"-->
                    <!--                android:textSize="10dp"/>-->
                    <TextView
                        android:id="@+id/no_of_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="42 comments"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/oxygen_regular"
                        android:textSize="12sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </LinearLayout>

<!--            <ImageView-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="200dp"-->
<!--                android:layout_marginBottom="257dp"-->
<!--                android:src="@drawable/mandala" />-->


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
