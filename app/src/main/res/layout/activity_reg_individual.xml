                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:background="@drawable/custom_ripple_white"
                        android:src="@drawable/edit_dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="20dp">


                    <RelativeLayout
                        android:id="@+id/xxx"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="65dp">

                            <ImageView
                                android:id="@+id/reg_dp_ind"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_account_circle_black_24dp" />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/reg_edit_dp_ind"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="90dp"
                            android:padding="7dp"
                            android:background="@drawable/custom_ripple_white"
                            android:src="@drawable/edit_dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:foregroundGravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/xxx"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen_bold"
                            android:paddingHorizontal="10dp"
                            android:gravity="center"
                            android:text="@string/choose_pic"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_595252"
                            android:textSize="15dp"
                            android:layout_marginTop="25dp"/>

                    </LinearLayout>

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
