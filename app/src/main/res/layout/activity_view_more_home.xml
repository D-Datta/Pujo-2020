<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMoreHome"
    android:background="#fff">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/custom_ripple_white"
                    android:padding="11dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:layout_marginEnd="3dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/user_image44"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/harabara"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="8dp"
                        android:text="Name"
                        android:textColor="#212121"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/comName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oxygen_regular"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="Name"
                        android:maxLines="1"
                        android:background="@drawable/custom_ripple_white"
                        android:textColor="#212121"
                        android:textSize="13sp"
                        android:layout_marginBottom="2dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/mins_ago44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:text="10 mins ago"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/delete_post"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_ripple_white"
                    android:src="@drawable/ic_more_horiz_black_24dp"
                    android:visibility="visible"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tagsList_recycler44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:clipToPadding="false"
                android:paddingTop="5dp"/>

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/text_content44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="8dp"
                android:paddingHorizontal="12dp"
                android:autoLink="all"
                android:textColorLink="@color/toolbarStart"
                android:ellipsize="end"
                android:fontFamily="@font/oxygen_regular"
                android:textSize="15sp"
                app:trimExpandedText="@string/read_less"
                app:trimCollapsedText="@string/read_more"
                app:trimMode="trimModeLine"
                app:trimLines="13"
                app:colorClickableText="@color/toolbarStart"
                android:visibility="visible"
                android:textColor="#212121"/>

            <com.example.pujo360.LinkPreview.ApplexLinkPreview
                android:id="@+id/LinkPreView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/post_image44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/image_background_grey"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/flame44"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_btmnav_notifications"
                    android:padding="5dp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    android:id="@+id/comment44"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_comment"
                    android:padding="5dp"
                    android:layout_marginStart="4dp"/>
                <ImageView
                    android:id="@+id/share44"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_share"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginStart="4dp"/>
                <TextView
                    android:id="@+id/flamed_by44"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/oxygen_regular"
                    android:textSize="15sp"
                    android:paddingStart="5dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginTop="8dp"
                android:background="#E2E2E2"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Latest Comments"
                    android:fontFamily="@font/harabara"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/no_of_comments44"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="42 comments"
                    android:layout_marginTop="7.3dp"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comments_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:minHeight="250dp"
                    app:reverseLayout="false"
                    android:overScrollMode="never"
                    android:clipToPadding="false"/>

                <ImageView
                    android:id="@+id/no_comment44"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_no_comments"
                    android:padding="40dp"
                    android:visibility="visible"
                    android:layout_height="250dp"/>

                <ProgressBar
                    android:id="@+id/progress_more1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:elevation="10dp"
        android:layout_height="55dp"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/user_image_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/new_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_marginVertical="7dp"
            android:maxLines="6"
            android:imeOptions="flagNoExtractUi"
            android:hint="Write a comment..."
            android:background="@drawable/background_rectangle"
            android:layout_marginEnd="55dp"/>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="-55dp">

            <ImageView
                android:id="@+id/send_comment"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_send_green_24dp"
                android:background="@drawable/custom_ripple_white"
                android:padding="10dp"
                android:layout_marginTop="3dp" />

            <ProgressBar
                android:id="@+id/commentProgress"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>