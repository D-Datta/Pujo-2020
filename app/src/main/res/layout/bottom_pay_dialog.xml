                android:paddingHorizontal="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/purple"
                android:fontFamily="@font/oxygen_bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/dismissflame"
