<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_post_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:gravity="start|center_vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="65dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/add_to_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_post"
            android:paddingVertical="10dp"
            android:fontFamily="@font/oxygen_ex_bold"
            android:textColor="@color/purple"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp" />

        <RelativeLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_tag_24"
                android:padding="8dp"
                app:tint="@color/pink"
                android:layout_toLeftOf="@+id/yay4"/>

            <ImageView
                android:id="@+id/yay4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_camera_24"
                android:padding="8dp"
                app:tint="@color/colorPrimaryDark"
                android:layout_toLeftOf="@+id/yay3"/>

            <ImageView
                android:id="@+id/yay3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_photo_gallery_library_24"
                android:padding="8dp"
                app:tint="@color/purple"
                android:layout_toStartOf="@+id/video_gal_icon"/>

            <ImageView
                android:id="@+id/video_gal_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_videocam_24"
                android:padding="8dp"
                app:tint="@color/link"
                android:layout_toStartOf="@+id/video_cam_icon"/>

            <ImageView
                android:id="@+id/video_cam_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_video_call_24"
                android:padding="8dp"
                app:tint="@color/tabIndicatorColor"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_ripple_white_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_camera_24"
            android:padding="8dp"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:id="@+id/Photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_ripple_white_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_photo_gallery_library_24"
            android:padding="8dp"
            app:tint="@color/purple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:id="@+id/Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_ripple_white_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_videocam_24"
            android:padding="8dp"
            app:tint="@color/link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:id="@+id/Recorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_ripple_white_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_video_call_24"
            android:padding="8dp"
            app:tint="@color/tabIndicatorColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recorder"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    
    <LinearLayout
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/custom_ripple_white_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_tag_24"
            android:padding="8dp"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>