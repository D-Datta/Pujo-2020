<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/slider_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/view_slider"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/divider_color"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="10dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:sliderAnimationDuration="500"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="500"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="1dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="@color/white"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="false" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/type_something"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="22dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/Pdp"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account_circle_black_24dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/type_smthng"
                    android:text="@string/share_your_pujo_story"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/oxygen_bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/layerlistbg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_icons_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/custom_ripple_white"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_camera_24"
                        android:padding="8dp"
                        app:tint="@color/colorPrimaryDark" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/camera"
                        android:fontFamily="@font/oxygen_bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_photo_gallery_library_24"
                    android:padding="8dp"
                    app:tint="@color/purple1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/gallery"
                        android:fontFamily="@font/oxygen_bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_video_call_24"
                    android:padding="8dp"
                    app:tint="@color/link" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/recorder"
                        android:fontFamily="@font/oxygen_bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:id="@+id/suggested_hashtags_card"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_margin="10dp"-->
    <!--        android:visibility="gone"-->
    <!--        >-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggested_hashtags_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/recycler_bg"
        android:visibility="gone"/>

    <!--    </androidx.cardview.widget.CardView>-->

    <LinearLayout
        android:id="@+id/reels_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">

        <View
            android:id="@+id/view_type_smth"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/oxygen_bold"
            android:gravity="center_vertical"
            android:textColor="@color/purple"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/utsav_clips"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="345dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reelsRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:clipToPadding="false"
                android:paddingBottom="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/view_all_reels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oxygen_bold"
            android:background="@drawable/custom_ripple_white"
            android:paddingHorizontal="20dp"
            android:paddingTop="5dp"
            android:text="@string/see_all"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:textColor="@color/grey_868686"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feeds_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/oxygen_bold"
            android:gravity="center_vertical"
            android:textColor="@color/purple"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/people_post"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="345dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedsRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:clipToPadding="false"
                android:paddingBottom="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/view_all_feeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oxygen_bold"
            android:background="@drawable/custom_ripple_white"
            android:paddingHorizontal="20dp"
            android:paddingTop="5dp"
            android:text="@string/see_all_posts"
            android:paddingBottom="5dp"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:id="@+id/committee_item">

        <View
            android:id="@+id/view_pujo"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginBottom="5dp"
            android:background="@color/divider_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/com_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:paddingVertical="5dp"
                android:layout_centerVertical="true"
                android:text="@string/upvoted_pujos"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/community_view_all"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginVertical="5dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"
                android:text="@string/view_all"
                android:background="@drawable/custom_ripple_white"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/darkpurple"
                android:textSize="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communityRecycler"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:clipToPadding="false"
                android:paddingEnd="12dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/normal_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:id="@+id/item_home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dp_outline">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:id="@+id/user_image"
                                android:layout_width="50dp"
                                android:background="@drawable/custom_ripple_white"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen_ex_bold"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/custom_ripple_white"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/mins_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/custom_ripple_white"
                        android:src="@drawable/ic_more_horiz_black_24dp"
                        android:visibility="visible"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:visibility="gone"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/head_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:fontFamily="@font/oxygen_ex_bold"
                    android:paddingHorizontal="17dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:text="@string/head_content"
                    android:textColor="@color/purple"
                    android:ellipsize="end"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:fontFamily="@font/oxygen_bold"
                    android:paddingHorizontal="17dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:text="@string/post_content"
                    android:textColor="@color/black"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:textColorLink="@color/link"
                    android:textSize="15dp" />

                <com.applex.utsav.LinkPreview.ApplexLinkPreview
                    android:id="@+id/LinkPreView"
                    android:layout_width="match_parent"
                    android:minHeight="270dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/rlLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="5dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        app:sliderAnimationDuration="500"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        android:transitionName="transition"
                        app:sliderIndicatorSelectedColor="@color/grey_5A5A5A"
                        app:sliderIndicatorUnselectedColor="@color/white"
                        app:sliderScrollTimeInSec="1"
                        android:visibility="gone"
                        app:sliderStartAutoCycle="true" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/dhak_anim"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="false"
                        android:padding="90dp"
                        android:background="@color/dark_black_transparent2"
                        app:lottie_fileName="dhakbajano.json"
                        app:lottie_loop="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="34dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_btmnav_notifications" />

                        <ImageView
                            android:id="@+id/comment"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/custom_ripple_white"
                            android:padding="5dp"
                            android:src="@drawable/ic_conch_shell" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/custom_ripple_white"
                            android:padding="5dp"
                            android:src="@drawable/ic_blossom" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/like_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_ripple_white">

                            <ImageView
                                android:id="@+id/like_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_favorite_24"
                                app:tint="@color/black_transparent" />

                            <TextView
                                android:id="@+id/no_of_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="5dp"
                                android:text="@string/_2_4k"
                                android:textColor="@color/black_transparent"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_ripple_white">

                            <ImageView
                                android:id="@+id/comment_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="end|center_vertical"
                                android:padding="6dp"
                                android:src="@drawable/ic_comment" />

                            <TextView
                                android:id="@+id/no_of_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_gravity="center_vertical"
                                android:text="@string/_154"
                                android:textColor="@color/black_transparent"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="8dp"/>

            <LinearLayout
                android:id="@+id/comment_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:fontFamily="@font/oxygen_bold"
                            android:autoLink="all"
                            android:textColorLink="@color/toolbarStart"
                            android:text=""
                            android:textColor="@color/black"
                            android:paddingHorizontal="8dp"/>

                        <com.applex.utsav.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment1"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="all"
                            android:fontFamily="@font/oxygen_bold"
                            android:lineSpacingExtra="3dp"
                            android:paddingHorizontal="8dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorLink="@color/toolbarStart" />

                        <com.applex.utsav.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment2"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/write_comment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="@string/write_a_comment"
                    android:paddingHorizontal="13dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/background_rectangle"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>