<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_reels"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="6dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/com_card"
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="340dp">

            <VideoView
                android:id="@+id/item_reels_video"
                android:layout_width="220dp"
                android:layout_height="340dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/item_reels_image"
                android:layout_width="220dp"
                android:layout_height="340dp"
                android:scaleType="fitXY"
                android:background="@color/grey_868686"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/view_black"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/video_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:textStyle="bold"
                    android:text="@string/_0_18"
                    android:textColor="@color/reels_white"
                    android:textSize="13dp"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/reels_more"
                android:layout_width="32dp"
                android:layout_height="25dp"
                app:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_ripple_transparent"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/pujo_com_dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/pujo_com_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/pujo_committees"
                        android:textColor="@color/reels_white"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reels_mins_ago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_10_mins_ago"
                        android:textSize="10dp"
                        android:textColor="@color/reels_white"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>