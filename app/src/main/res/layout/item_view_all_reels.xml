<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/reels_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/reels_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_button"
        android:visibility="gone"
        app:tint="@color/white_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/back_reel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/white"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/save_reel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            app:tint="@color/white"
            android:src="@drawable/ic_cloud_download_black_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:id="@+id/pujo_com_dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pujo_com_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/pujo_committees"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/mins_ago_reels"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/_10_mins_ago"
                    android:textSize="14dp"
                    android:textColor="@color/white_transparent"/>

            </LinearLayout>

        </LinearLayout>

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/text_content44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:autoLink="all"
            android:textColorLink="@color/link"
            android:text="@string/lorem_ipsum"
            android:scrollbars="vertical"
            android:textSize="15dp"
            app:trimExpandedText="@string/read_less"
            app:trimCollapsedText="@string/read_more"
            app:trimMode="trimModeLength"
            app:trimLength="120"
            app:colorClickableText="@color/white_transparent"
            android:visibility="visible"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="26dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressAnim"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00212121"
                android:padding="100dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="video_play.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:text="@string/marquee_text"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="17dp"
            android:layout_marginVertical="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/drumbeat"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="26dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_drum" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_conch_shell" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_blossom"
                    app:tint="#F3B3B3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="7dp"
                    android:src="@drawable/ic_baseline_favorite_24"
                    app:tint="@color/white_transparent" />

                <TextView
                    android:id="@+id/likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/_2_4k"
                    android:textColor="@color/white_transparent"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/comment_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end|center_vertical"
                    android:padding="7dp"
                    android:src="@drawable/ic_comment"
                    app:tint="@color/white_transparent"/>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/_154"
                    android:textColor="@color/white_transparent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>