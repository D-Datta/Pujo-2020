                        android:layout_marginStart="0dp"
                        android:paddingTop="10dp"
                        android:paddingHorizontal="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/oxygen_regular"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <EditText
