<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_reels"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/com_card"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/item_reels_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_rectangle_reel"
                    android:visibility="visible" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/view_black"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/video_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:text="@string/_0_18"
                        android:textColor="@color/reels_white"
                        android:textSize="13dp"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/reels_more"
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    app:tint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pujo_headline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:text="@string/pujo_committees"
                        android:textColor="@color/reels_white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/pujo_video_views"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/oxygen_regular"
                        android:gravity="center_vertical"
                        android:text="420 views"
                        android:textColor="@color/reels_white"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>