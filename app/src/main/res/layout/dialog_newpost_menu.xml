<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_post_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical"
    android:gravity="start|center_vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="55dp"
    android:elevation="10dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/add_to_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_post"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/yay4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_camera_24"
                android:padding="8dp"
                app:tint="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/yay3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_photo_gallery_library_24"
                android:padding="8dp"
                app:tint="@color/purple1" />

            <ImageView
                android:id="@+id/video_gal_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_videocam_24"
                android:padding="8dp"
                app:tint="@color/link" />

            <ImageView
                android:id="@+id/video_cam_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_video_call_24"
                android:padding="8dp"
                app:tint="@color/tabIndicatorColor" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/custom_ripple_newpost"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_camera_24"
            android:padding="8dp"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/Photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/custom_ripple_newpost"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_photo_gallery_library_24"
            app:tint="@color/purple1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photos"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/custom_ripple_newpost"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_videocam_24"
            android:padding="8dp"
            app:tint="@color/link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/Recorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/custom_ripple_newpost"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_video_call_24"
            android:padding="8dp"
            app:tint="@color/tabIndicatorColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recorder"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

    </LinearLayout>

