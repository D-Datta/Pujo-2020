        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/communityRecycler"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:clipToPadding="false"
            android:paddingBottom="10dp"/>

    </LinearLayout>


