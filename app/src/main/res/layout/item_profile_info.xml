<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageView
            android:id="@+id/coverpic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_background_grey" />
        <ImageView
            android:id="@+id/edit_coverpic_icon_ind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/custom_ripple_white"
            android:src="@drawable/edit_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:id="@+id/yyy"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/dp_bg"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#E0E0E0"
                    app:cardCornerRadius="65dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:id="@+id/Pdp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_account_circle_black_24dp" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/edit_dp_icon_ind"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="90dp"
                    android:padding="7dp"
                    android:background="@drawable/custom_ripple_white"
                    android:src="@drawable/edit_dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/yyy"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Profilename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/harabara"
                    android:paddingHorizontal="10dp"
                    android:text="Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Pusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/oxygen_bold"
                    android:maxLines="1"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:text="Username"
                    android:textColor="#212121"
                    android:textSize="18dp" />

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interests_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="#fff"
        android:paddingTop="5dp"
        android:paddingHorizontal="4dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:background="#FFF"
        android:fontFamily="@font/oxygen_regular"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/about"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorLink="@color/toolbarStart"
        android:textSize="18sp"
        android:visibility="gone"/>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/detaildesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen_regular"
        android:maxLength="1000"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="@color/toolbarStart"
        android:paddingHorizontal="20dp"
        android:paddingBottom="10dp"
        android:textColor="#868686"
        android:background="#fff"
        android:textSize="15sp"
        app:colorClickableText="@color/toolbarStart"
        app:trimCollapsedText="@string/read_more"
        app:trimExpandedText="@string/read_less"
        app:trimLines="15"
        app:trimMode="trimModeLine"
        android:text="@string/about_yourself"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e2e2e2"
        android:paddingBottom="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_latest_post"
            android:fontFamily="@font/oxygen_bold"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="Your Posts"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

    <ImageView
        android:id="@+id/no_recent_post"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#e2e2e2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="45dp"
        android:src="@drawable/ic_no_posts"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_post">


        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:background="#E2E2E2"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/post_bg"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:id="@+id/item_home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="50dp"
                            android:background="@drawable/custom_ripple_white"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oxygen_ex_bold"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@drawable/custom_ripple_white"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/mins_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/custom_ripple_white"
                        android:src="@drawable/ic_more_horiz_black_24dp"
                        android:visibility="visible"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:fontFamily="@font/oxygen_bold"
                    android:paddingHorizontal="17dp"
                    android:background="@drawable/custom_ripple_white"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:text="@string/post_content"
                    android:textColor="@color/black"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:textColorLink="@color/link"
                    android:textSize="15dp" />

                <com.applex.utsav.LinkPreview.ApplexLinkPreview
                    android:id="@+id/LinkPreView"
                    android:layout_width="match_parent"
                    android:minHeight="270dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <!--                <HorizontalScrollView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content">-->

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:sliderAnimationDuration="500"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    android:layout_marginTop="5dp"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    android:visibility="gone"
                    app:sliderStartAutoCycle="true" />


                <!--                </HorizontalScrollView>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_btmnav_notifications" />

                        <ImageView
                            android:id="@+id/comment"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/custom_ripple_white"
                            android:padding="5dp"
                            android:src="@drawable/ic_conch_shell" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/custom_ripple_white"
                            android:padding="5dp"
                            android:src="@drawable/ic_blossom"
                            app:tint="#F3B3B3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/like_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_ripple_white">

                            <ImageView
                                android:id="@+id/like_image"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:padding="7dp"
                                android:src="@drawable/ic_baseline_favorite_24"
                                app:tint="@color/black_transparent" />

                            <TextView
                                android:id="@+id/no_of_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="8dp"
                                android:fontFamily="@font/oxygen_ex_bold"
                                android:text="@string/_2_4k"
                                android:textColor="@color/black_transparent"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/custom_ripple_white">

                            <ImageView
                                android:id="@+id/comment_image"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="end|center_vertical"
                                android:padding="8dp"
                                android:src="@drawable/ic_comment" />

                            <TextView
                                android:id="@+id/no_of_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="6dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/oxygen_ex_bold"
                                android:text="@string/_154"
                                android:textColor="@color/black_transparent"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_background"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="8dp"/>

            <LinearLayout
                android:id="@+id/comment_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:fontFamily="@font/oxygen_bold"
                            android:autoLink="all"
                            android:textColorLink="@color/toolbarStart"
                            android:text="@string/comment_hint"
                            android:textColor="#212121"
                            android:paddingHorizontal="8dp"/>

                        <com.applex.utsav.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment1"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/comment_user_dp2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="4dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/background_rectangle"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/comment_username2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:text="@string/name"
                                android:paddingVertical="2dp"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/comment2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:fontFamily="@font/oxygen_bold"
                            android:autoLink="all"
                            android:textColorLink="@color/toolbarStart"
                            android:text="@string/comment_hint"
                            android:textColor="#212121"
                            android:paddingHorizontal="8dp"/>

                        <com.applex.utsav.LinkPreview.ApplexLinkPreviewShort
                            android:id="@+id/LinkPreViewComment2"
                            android:layout_width="match_parent"
                            android:minHeight="82dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment_mins_ago2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="@string/_10_mins_ago"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/write_comment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="@string/write_a_comment"
                    android:paddingHorizontal="13dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/background_rectangle"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!--            <ImageView-->
        <!--                android:layout_width="200dp"-->
        <!--                android:layout_height="200dp"-->
        <!--                android:layout_marginBottom="257dp"-->
        <!--                android:src="@drawable/mandala" />-->


    </RelativeLayout>
    </LinearLayout>

</LinearLayout>