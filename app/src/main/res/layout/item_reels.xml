<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_reels"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/item_reels_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">

        <TextView
            android:id="@+id/video_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="@string/_0_18"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/reels_more"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        app:tint="@color/white"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_ripple_transparent"
        android:src="@drawable/ic_more_vert_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/pujo_com_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pujo_com_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/oxygen_ex_bold"
            android:gravity="center_vertical"
            android:text="@string/pujo_committees"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>