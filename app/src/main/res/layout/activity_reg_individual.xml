                        android:text="@string/choose_gender"
                        android:layout_marginStart="0dp"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="15dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/oxygen_regular"
